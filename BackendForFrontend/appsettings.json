{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=bff.db"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Debug",
      "Yarp": "Debug"
    }
  },

  "AllowedHosts": "*",
  "Redis": "localhost",
  "Gateway": {
    "SessionTimeoutInMin": "60",
    "Url": "",
    "ApiPath": "/api-gw/"
  },
  "OpenIdConnect": {
    "Authority": "https://localhost:7242",
    "ClientId": "bff-api",
    "ClientSecret": "secret",
    "Scopes": "openid profile offline_access Inventory.All Order.All",
    "DownStreamServices": [
      {
        "ApiPath": "sale",
        "ClientId": "sale-api",
        "ClientSecret": "secret",
        "Scope": "sale.read"
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "apiCluster",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "api-gw/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api-gw/sale" },
          { "PathPrefix": "/api" },
          { "RequestHeaderOriginalHost": "true" },
          {
            "RequestHeader": "cookie",
            "Set": ""
          }
        ]
      },
      "appRoute": {
        "ClusterId": "appCluster",
        "Match": {
          "Path": "{**remainder}"
        },
        "Transforms": [
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7290/"
          }
        }
      },
      "appCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7242"
          }
        }
      }
    }
  }
}